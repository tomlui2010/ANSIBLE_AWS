global:
  scrape_interval: 1s
  evaluation_interval: 1s
  external_labels:
    monitor: 'prometheus'

rule_files:
  - /etc/prometheus/alerts/rules.yml

alerting:
  alertmanagers:
    - scheme: http
      static_configs:
        - targets: ['{{ alertmanagerhost }}:9093']

scrape_configs:
  - job_name: 'Backend EC2 Instance'
    ec2_sd_configs:
      - region: us-west-2
        access_key: "{{ aws_access_key_id }}"
        secret_key: "{{ aws_secret_access_key }}"
        port: 9100
        filters:
          - name: tag:Name
            values:
              - backend-*

  - job_name: 'Prometheus'
    static_configs:
      - targets: ['localhost:9090']
