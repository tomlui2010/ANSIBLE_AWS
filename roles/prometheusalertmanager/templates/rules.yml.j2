groups:
  - name: Down
    rules:
      - alert: InstanceDown
        expr: up == 0
        for: 3m
        labels:
          severity: 'critical'
        annotations:
          summary: "Instance  is down"
          description: " of job  has been down for more than 3 minutes."


/usr/local/bin/alertmanager --config.file /etc/prometheus/alertmanager.yml --storage.path /var/lib/alertmanager